<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Flow">

    <TextView
        android:id="@+id/textView_title_flowFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_title_margin"
        android:layout_marginTop="@dimen/fragment_title_margin"
        android:layout_marginEnd="@dimen/fragment_title_margin"
        android:layout_marginBottom="@dimen/fragment_title_margin"
        android:fontFamily="@font/raleway"
        android:text="@string/title_flow"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/fragment_title_size"
        tools:targetApi="jelly_bean" />

    <RelativeLayout android:id="@+id/relativeLayout_flowFragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_title_flowFragment">

        <RelativeLayout android:id="@+id/flowFragment_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/block_greeter_margin">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/textView_flowFragment_greeter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorIcons"/>

            <TextView
                android:id="@+id/textView_flowFragment_greeter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_title_margin"
                android:layout_toEndOf="@id/textView_flowFragment_greeter"
                android:fontFamily="@font/raleway"
                android:text="@string/string_placeholder_hello_there"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/textView_flowFragment_greeter_infoMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_flowFragment_greeter_name"
                android:layout_alignStart="@id/textView_flowFragment_greeter_name"
                android:layout_marginTop="4dp"
                android:text="@string/action_tap_to_change_name_or_pic"
                android:textColor="@color/colorTextSecondary" />
        </RelativeLayout>
        <FrameLayout android:id="@+id/divider_below_greeter"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/flowFragment_divider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/fragment_title_margin"
            android:layout_marginEnd="@dimen/fragment_title_margin"
            android:background="@android:color/transparent" />

        <RelativeLayout android:id="@+id/flow_ui_block_recent_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_below_greeter">

            <TextView
                android:id="@+id/textView_flowFragment_header_recentPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/fragment_title_margin"
                android:fontFamily="@font/raleway"
                android:text="@string/title_flow_recent_photos"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                tools:targetApi="jelly_bean" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_flowFragment_action_showPhotosAll"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:text="@string/btn_showAll"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>